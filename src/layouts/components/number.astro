---
const { numbers } = Astro.props;
const { experience,courses, customers, awards } = numbers;
---

<section class="number relative overflow-hidden h-72 flex justify-center">
    <div class="wrapper flex h-full items-center justify-around gap-5">
        <div class="card-s rounded-md h-24 min-w-52 flex flex-col items-center justify-center">
            <div class="text-white text-3xl">{experience}+</div>
            <div class="text-white">Years of Experience</div>
        </div>
        <div class="card-s rounded-md h-24 min-w-52 flex flex-col items-center justify-center">
            <div class="text-white text-3xl">{courses}+</div>
            <div class="text-white">Total Courses</div>
        </div>
        <div class="card-s rounded-md h-24 min-w-52 flex flex-col items-center justify-center">
            <div class="text-white text-3xl">{customers}+</div>
            <div class="text-white">Satisfied Customer</div>
        </div>
        <div class="card-s rounded-md h-24 min-w-52 flex flex-col items-center justify-center">
            <div class="text-white text-3xl">{awards}+</div>
            <div class="text-white">Certificates & Awards</div>
        </div>
    </div>
</section>
